{
    "name": "api",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "clean": "rm -rf bin/",
        "prebuild": "npm run clean",
        "build": "npm-run-all build:*",
        "build:ts": "tsc",
        "build:lint": "tslint \"./src/**\" -e \"**/*.d.ts\"",
        "start": "node bin/app.js",
        "start:dev":
            "npm install && nodemon -x 'npm-run-all build start' --watch src/ -L -e ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prettify":
            "find ./src -name \\*.ts | xargs prettier --find-config-path --write",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.{ts,json}": ["prettier -find-config-path --write", "git add"]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/italianlunch/api.git"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/koa": "^2.0.40",
        "@types/koa-bodyparser": "^3.0.26",
        "@types/koa-router": "^7.0.25",
        "husky": "^0.14.3",
        "lint-staged": "^4.3.0",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.2",
        "prettier": "^1.8.2",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.3.0",
        "tslint-config-prettier": "^1.6.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^2.6.1"
    },
    "dependencies": {
        "graphql": "0.6.2",
        "koa": "^2.4.1",
        "koa-bodyparser": "^4.2.0",
        "koa-router": "^7.3.0"
    }
}
