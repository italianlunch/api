{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "./bin",
        "experimentalDecorators": true,
        "allowJs": true
    },
    "exclude": ["node_modules"]
}
